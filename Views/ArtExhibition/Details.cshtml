@* Kopplar vyn till modellen ArtExhibitions *@
@model ArtExhibitions
@* Använder _layout-filen för att ge enhetlig design *@
@{
    Layout = "_layout";
}
<div class="d-flex justify-content-center my-5">
    <h2 class="fs-1">Details of chosen art exhibition</h2>
</div>
<div class="d-flex justify-content-center">
    <div class="px-4">
        <strong>Exhibition title: </strong>
        @* Visar värdet av ExhibitionTitle från modellen *@
        @Html.DisplayFor(item => item.ExhibitionTitle)
    </div>
    <div class="px-4">
        <strong>Description about the exhibition: </strong>
        @* Visar värdet av Description från modellen *@
        @Html.DisplayFor(item => item.Description)
    </div>
</div>